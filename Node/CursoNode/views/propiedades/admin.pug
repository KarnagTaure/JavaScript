extends ../layout/admin

block contenido
    .py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Meiyo
            span.font-normal Dojo
        h2.text-center.text-3xl.text-red-600.font-extrabold= pagina 

        a(href="/propiedades/crear" class="rounded py-2 px-10 bg-red-600 hover:bg-red-700 text-sm font-bold text-center text-white uppercase my-5 inline-block w-full md:w-auto") Publicar

        //- pre= JSON.stringify(propiedades,undefined, 2)

        if propiedades.length 
            div(class="bg-white shadow rounded-lg")
                ul(class="divide-y divide-gray-200")
                    each propiedad in propiedades   
                        li 
                            div(class="p-6 w-full flex flex-col sm:flex-row sm:items-center sm:justify-between space-y-8 md:space-y-0 gap-4")
                                div(class="sm:w-1/4 md:w-1/6")
                                    img(src=`uploads/${propiedad.imagen}` alt=`Imagen propiedad ${propiedad.titulo}` class="w-full block")
                                div(class="sm:w-2/4 md:w-3/6 lg:w-4/6 space-y-3") 
                                    a(class="block text-2xl font-extrabold text-red-600 truncate" href="#")= propiedad.titulo 

                                    p(class="text-sm text-black font-bold")= propiedad.categoria.nombre
                                    p(class="text-sm text-gray-500 font-bold")= propiedad.precio.nombre



                                div(class="sm:w-1/4 md:w-2/6 lg:flex-1 flex flex-col gap-2 lg:flex-row") 
                                    form(action="#")
                                        input(type="submit" class=`w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold shadow rounded-sm cursor-pointer ${propiedad.publicado ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'}` value =`${propiedad.publicado ? 'Publicado': 'No publicado'}`)

                                    a(href=`/propiedades/editar/${propiedad.id}` class="text-center px-2 py-2 md:py-1 text-xs leading-5 font-semibold shadow rounded-sm cursor-pointer bg-indigo-100 text-indigo-800") Editar 

                                    form(method="POST" action=`/propiedades/eliminar/${propiedad.id}`)
                                        input(type="hidden" name="_csrf" value= csrfToken)
                                        input(type="submit" class=`w-full px-2 py-2 md:py-1 text-xs leading-5 font-semibold shadow rounded-sm cursor-pointer bg-red-100 text-red-800` value =`Eliminar`)
        
        else 
            p.text-center No Hay Propiedades
