        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(class="dropzone border-dashed borde-2 w-full min:h-96 h-auto rouded flex-col justify-center items-center" method= "POST" action=`/propiedades/agregar-imagen/${propiedad.id}`).space-y-8
