extends ../layout/admin

block styles 
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido
    .py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Meiyo
            span.font-normal Dojo
        h2.text-center.text-3xl.text-red-600.font-extrabold= pagina 

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-center.p-2.mb-1.font-bold.rounded-md= error.msg


        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form(method= "POST" ).space-y-8
                input(type="hidden" name="_csrf" value= csrfToken)
                .space-y-5 
                    h3.text-leg.leading.uppercase.font-medium.text-gray-900 Informaci칩n General 
                    p.text-gray-600 A침ade la Informaci칩n

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="titulo") Titulo de anuncio 
                        input#titulo.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Titulo" type="text" name="titulo" value= datos.titulo ? datos.titulo : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="descripcion") Descripci칩n
                        textarea#descripcion.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Descripcion" type="text" name="descripcion" )=value= datos.descripcion ? datos.descripcion : ''


                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")   
                        
                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="categoria") Categoria  
                            select#categoria.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="categoria")
                                option(value="") - Selecciona -
                                each categoria  in categorias 
                                    option(value=categoria.id selected=datos.categoriaId ? datos.categoriaId== categoria.id ? true : false : null )=categoria.nombre


                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="precio") Precio  
                            select#precio.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="precio")
                                option(value="") - Selecciona -
                                each precio  in precios  
                                    option(value=precio.id selected=datos.precioId ? datos.precioId== precio.id ? true : false : null )=precio.nombre
                    
                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")                         
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="habitaciones") Habitaciones  
                            select#habitaciones.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="habitaciones")
                                option(value="") - Selecciona -
                                - var n =1;
                                    while n < 10
                                        option(value=n selected= datos.habitaciones ? datos.habitaciones == n ? true : false : null) #{n++} 

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="estacionamiento") Estacionamiento  
                            select#estacionamiento.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="estacionamiento")
                                option(value="") - Selecciona -
                                - var n =1;
                                    while n < 5
                                        option(value=n selected= datos.estacionamiento ? datos.estacionamiento == n ? true : false : null) #{n++} 

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="wc") WC  
                            select#wc.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="wc")
                                option(value="") - Selecciona -
                                - var n =1;
                                    while n < 5
                                        option(value=n selected=datos.wc ? datos.wc == n ? true : false :null) #{n++} 


                    div.border-grat-200.border-t.py-5.space-y-5
                        h3.text-lg.leading-6.font-mediun.text-gray-900 Informacion General 
                        p.text-gray-600 Ubica la propiedad en el mapa
                        #mapa.h-96

                        div 
                            p.calle= datos.calle ? datos.calle : ''
                    
                        input(type="hidden" name="calle" id="calle" value= datos.calle ? datos.calle : '')
                        input(type="hidden" name="lat" id="lat" value= datos.lat ? datos.lat : '')
                        input(type="hidden" name="lng" id="lng" value= datos.lng ? datos.lng : '')

                    Input(class="w-full py-3 bg-red-600 hover:bg-red-700 rounded text-white font-bold uppercase cursor-pointer" type="submit" value="Guardar cambios")


block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")