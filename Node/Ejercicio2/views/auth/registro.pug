extends ../layout/index

block contenido
    .py-10 
        h1.text-4xl.my-10.font-extrabold.text-center Meiyo
            span.font-normal Dojo
        h2.text-center.text-3xl.text-red-600.font-extrabold= pagina 

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p.bg-red-600.text-white.uppercase.text-center.p-2.mb-1.font-bold.rounded-md= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST" action="/auth/registro" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.tex-sm.uppercase.text-gray-500.mb-2.font-bold(for="nombre") Tu nombre 
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu Nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')

                    div
                        label.block.tex-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de registro 
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Tu email" type="email" name="email" value= usuario ? usuario.email : '')

                    div
                        label.block.tex-sm.uppercase.text-gray-500.mb-2.font-bold(for="password") Password 
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Password" type="password" name="password")

                    div
                        label.block.tex-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetir_password") Repite tu password 
                        input#repetir_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repite tu password" type="password" name="repetir_password")

                    div.flex.item-center.justify-between
                        a.tex-gray-500.text-xs(href="/auth/login") Â¿Ya tienes cuenta? Inicia sesion  
                        a.tex-gray-500.text-xs(href="/auth/olvide-password") Olvide mi Password

                    input(class="w-full bg-red-600 hover:bg rounded-md bg-red-700 text-center text-white font-bold py-3 cursor-pointer" type="submit" value="Crear Cuenta")                  
